<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@color/key_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/about_text"
        style="@style/body_text"
        android:text="@string/about_app"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/my_git_url"
        style="@style/link_text"
        android:text="@string/link_my_git"
        android:layout_below="@id/about_text"/>

    <TextView
        android:id="@+id/att_background_text"
        style="@style/body_text"
        android:layout_marginTop="30dp"
        android:text="@string/attribution_background"
        android:layout_below="@+id/my_git_url"/>
    <TextView
        android:id="@+id/att_background_url"
        style="@style/link_text"
        android:text="@string/link_att_background"
        android:layout_below="@+id/att_background_text"/>

    <TextView
        android:id="@+id/att_toon_text"
        style="@style/body_text"
        android:text="@string/attribution_toon"
        android:layout_below="@+id/att_background_url"/>
    <TextView
        android:id="@+id/att_toon_url"
        style="@style/link_text"
        android:text="@string/link_att_toon"
        android:layout_below="@+id/att_toon_text"/>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>